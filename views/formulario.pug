html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title registro 
        link(href="https://getbootstrap.com/docs/4.0/examples/sign-in/"
            rel="canonical")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous")
        link(href="https://getbootstrap.com/docs/4.0/examples/sign-in/signin.css"
            rel="stylesheet")

        body(class="text-center")
            header
                div
                    h4 MarketValley
                    h5        
                        ul(style="list-style: none;")
                            li(list-style: none)
                            a(href="/productos") Listado de Productos
                    
                            li 
                            a(href="/altaproductos") Alta de Productos
                  
                            br


        form(class="form-signin" method="POST" action="/api/productos")
            img(src="https://cdn.worldvectorlogo.com/logos/pug.svg" 
                width="72"  
                height="72")
            br
            h1(class="h3 mb-3 font-weight-normal") Carga de Productos
            input(type="text"
                id="inputNombre"
                class="form-control"
                placeholder="Nombre"
                required
                autofocus
                name="nombre")
            br
            input( type="text"
                id="inputPrecio"
                class="form-control"
                placeholder="Precio"
                required
                autofocus
                name="precio")
            br
            input(type="text"
                id="inputURL"
                class="form-control"
                placeholder="URL imagen"
                required
                name="urlimagen")
            br
            button(class="btn btn-lg btn-primary btn-block" type="submit") Agregar
        script( src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous")


    