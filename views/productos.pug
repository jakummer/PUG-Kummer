html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title registro 
        link(href="https://getbootstrap.com/docs/4.0/examples/sign-in/"
            rel="canonical")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous")
        link(href="https://getbootstrap.com/docs/4.0/examples/sign-in/signin.css"
            rel="stylesheet")

        body(class="text-center")
            header
                div
                    h6 MarketValley
                    h6        
                        ul(style="list-style: none;")
                            li(list-style: none)
                            a(href="/productos") Listado de Productos
                    
                            li 
                            a(href="/altaproductos") Alta de Productos
                  
                            br
                div
    
                    h6(class="mt-5") Listado de Productos
                    table(class="table table-dark")
                       tr
                            td Nombre
                            td Precio
                            td URL imagen
                       tbody 
                       each producto in productos
                            tr
                                td #{producto.nombre}
                                td #{producto.precio}
                                td #{producto.urlimagen}